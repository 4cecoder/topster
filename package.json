{
  "name": "topster",
  "version": "1.0.0",
  "description": "Stream movies and TV shows from the command line with MCP support",
  "module": "index.ts",
  "type": "module",
  "bin": {
    "topster": "./index.ts"
  },
  "scripts": {
    "start": "bun run index.ts",
    "dev": "bun --watch run index.ts",
    "mcp": "bun run index.ts --mcp",
    "build": "bun build ./index.ts --outdir ./dist --target bun",
    "typecheck": "tsc --noEmit"
  },
  "private": true,
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^24.10.1",
    "react-devtools-core": "^7.0.1"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "@modelcontextprotocol/sdk": "^1.24.3",
    "@types/react": "^19.2.7",
    "canary": "^0.3.2",
    "chalk": "4",
    "cheerio": "^1.1.2",
    "commander": "^14.0.2",
    "elysia": "^1.4.18",
    "ink": "^6.5.1",
    "ink-big-text": "^2.0.0",
    "ink-gradient": "^3.0.0",
    "ink-select-input": "^6.2.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "react": "^19.2.1"
  }
}
